#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

print "Welcome to Tic Tac Toe!"
print "Where would you like to go?"
input = gets.strip
index = input_to_index(input)
updated_board = move(board, index, "X")
display_board(updated_board)
